<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vinrosa.badtransitapp.fragments.ItemsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="@android:color/holo_red_light">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@android:color/holo_red_dark">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="358dp"
                android:layout_height="52dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:text="@string/LatestsReports"
                android:textAlignment="center"
                android:textColor="?android:attr/colorBackgroundFloating"
                android:textSize="20sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/items_recycler_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"></android.support.v7.widget.RecyclerView>

</LinearLayout>
